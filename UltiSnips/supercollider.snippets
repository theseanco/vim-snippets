snippet proxyspace "ProxySpace Setup"
(
Server.local.options.memSize * 128;
s.options.numBuffers=4000;
s.boot;
p = ProxySpace.push(s);
p.makeTempoClock;
p.clock.tempo=${1:1};
)
endsnippet

snippet superdirt "SuperDirt setup"
(
s.options.numBuffers = 1024 * 16;
s.options.memSize = 8192 * 16;
s.waitForBoot {
    d = SuperDirt(2, s);
    d.loadSoundFiles;  
    s.sync;
    d.start([57121, 57122]);
}
)
endsnippet

snippet warp1 "warp1 setup" i
Warp1.ar(1,d[\\${1:buf}][${2:0}],${3:SinOsc.kr(0.1)},${4:freqScale:1},${5:windowSize:0.2},interp:${6:1},mul:${7:0.6})
endsnippet

snippet warp1v "warp1 verbose" i
Warp1.ar(${1:1},d[\\${1:buf}][${2:0}],${3:SinOsc.kr(0.1)},${5:freqScale:1},${6:windowSize:0.2},${7:envbufnum:-1},${8:overlaps:8},${9:windowRandRatio:0},${10:interp:1},${11:mul:0.6})
endsnippet

snippet bpfsaw "bpfsaw Pbind" i
