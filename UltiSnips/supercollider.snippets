snippet for
for (${1:1}, ${2:10}) {${3: |i}|}
	$0
}
endsnippet

snippet sdef
SynthDef(\\${1:synthName}, {${2: |${3:x}|}
	${0}
}).add;
endsnippet

snippet bplay "Pbind for bplay" i
Pbind(\instrument,\bplay,\buf,d[\\${1:kick}][${2:0}],\rate,${3:1},\pos,0,\rel,15,\pan,${4:0},\amp,${5:0.3},\out,${6:0})
endsnippet

snippet vplay "Pbind for vplay" i 
Pbind(\instrument,\vplay,\buf,d[\\${1:kick}][${2:0}],\rate,${3:1},\pos,${4:0},\rel,${5:1},\pan,${6:0},\amp,${7:0.3},\out,${8:0})
endsnippet

snippet it "Impulse.kr(~tempo.kr)" i
Impulse.kr(~tempo.kr${1})
endsnippet

snippet eperc "percussive envelope" i
EnvGen.ar(Env.perc(${1:0.01},${2:1}),${3:Impulse.kr(~tempo.kr)},levelScale:${4:1})
endsnippet

snippet eadsr "adsr envelope" i
EnvGen.ar(Env.adsr(${1:0.01},${2:0.3},${3:0.4},${4:1}),${5:Impulse.kr(~tempo.kr)},levelScale:${6:1})
endsnippet

snippet dfm1 "DFM1.ar" i
DFM1.ar(${0:~in.ar},${1:freq:1000},${2:res:0.1},${3:inputgain:1},${4:type:0},${5:noiselevel:0.0003},mul:${6:0.1})
endsnippet

